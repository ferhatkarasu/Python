

import random
x=random.randint(49,101)
can=1
print("5 Hakkınız vardır!")
print("50 ve 100 arasında bir sayı tahmini yapınız.")
while can<=5:
    can+=1
    sayi=int(input("Bir sayı giriniz:"))
    if sayi==x:
        print("Tebrikler doğru sayıyı buldunuz.")
        break
    if sayi<x:
        print("Sayıyınızı Büyültün")
    if sayi>x:
        print("Sayınızı Küçültün")

if can<=5:
    print("{}.Hakkınızda buldunuz.".format(can))
else:
    print("BULAMADINIZ.")
